<% provide(:title, @artwork.title) %>

<p id="notice"><%= notice %></p>

<p class="blog title">
  <%= @artwork.title %>
</p>

<div class="blog">
  <%= image_tag url_for(@artwork.cover_image) if @artwork.cover_image.attached? %>
</div>

<div class="blog">
  <%= @artwork.description %>
</div>

<%= render @artwork.artwork_parts %>

<div class="blog"><%= render 'artwork_parts/form' if admin_signed_in? %></div>

<div class="blog navigation-buttons">
  <%= link_to "", url_for(@prev_artwork), class: "fa fa-pull-left fa-chevron-left" %>
  <%= link_to "", root_path, class: "fa fa-home" %>
  <%= link_to "", url_for(@next_artwork), class: "fa fa-pull-right fa-chevron-right" %>
</div>
